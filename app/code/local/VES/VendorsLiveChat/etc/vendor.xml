<?xml version="1.0"?>
<config>
    <sections>
        <vendorslivechat translate="label" module="vendorslivechat">
            <label>Live chat</label>
            <sort_order>50</sort_order>
            <groups>
                <chat_windown translate="label">
                    <label>Chat window</label>
                    <sort_order>40</sort_order>
                    <fields>
                        <title translate="label">
                            <label>Top Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                    </fields>
                </chat_windown>
                <minimized  translate="label">
                    <label>Minimized Chat Button</label>
                    <sort_order>40</sort_order>
                    <fields>
                        <offline translate="label">
                            <label>Offline Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </offline>
                        <online translate="label">
                            <label>Online Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </online>
                    </fields>
                </minimized>
            </groups>
        </vendorslivechat>
    </sections>
</config>