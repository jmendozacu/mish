<?xml version="1.0"?>
<config>
    <sections>
        <vendorscontact translate="label" module="vendorscontact">
            <label>Contacts</label>
            <sort_order>70</sort_order>
            <groups>
                <contact translate="label">
                    <label>Setting</label>
                    <sort_order>40</sort_order>
                    <fields>
                       <enable translate="label">
                           <label>Active</label>
                           <frontend_type>select</frontend_type>
                           <source_model>vendorscontact/system_config_source_yesno</source_model>
                           <sort_order>2</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                       </enable>
                       <email translate="label">
							<label>Send Emails To</label>
							<frontend_type>text</frontend_type>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                           <frontend_class>required-entry validate-email</frontend_class>
						</email>
                    </fields>
                </contact>
            </groups>
        </vendorscontact>
    </sections>
</config>
