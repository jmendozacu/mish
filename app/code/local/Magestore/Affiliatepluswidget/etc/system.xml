<?xml version="1.0"?>
<config>
	<sections>
        <affiliateplus translate="label" module="affiliateplus">
            <groups>
                <!--Changed By Adam 13/09/2014: Add User Guide to Configuration page-->
                <document_help translate="label" module="affiliatepluswidget">
                    <fields>
                        <affiliatepluswidget_user_guide translate="label">
                            <label>Affiliate Plus Widget User Guide</label>
                            <frontend_type>label</frontend_type>  
                            <frontend_model>affiliatepluswidget/field_affiliatepluswidget</frontend_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment></comment>
                        </affiliatepluswidget_user_guide>
                    </fields>
                </document_help>
				<widget translate="label">
                    <label>Widget Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Widget Plugin</label>
                            <frontend_type>select</frontend_type>  
							<source_model>adminhtml/system_config_source_yesno</source_model>                 
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment></comment>
                        </enable>
						<min_width translate="label">
							<label>Minimum Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Minimum width of the element should be</comment>
						</min_width>
                        <min_height translate="label">
                        	<label>Minimum Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Minimum height of the element should be</comment>
                        </min_height>
                        <background translate="label">
                        	<label>Background Color of widget</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Default is FFFFFF</comment>
                        </background>
                        <border translate="label">
                        	<label>Background Color of header</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Default is AAAAAA</comment>
                        </border>
                        <textheader translate="label">
                        	<label>Text Color of header</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Default is 112211</comment>
                        </textheader>
                        <textlink translate="label">
                        	<label>Text Color of link</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Default is 0000FF</comment>
                        </textlink>
                        <textbody translate="label">
                        	<label>Text Color of product informations</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>55</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Default is 101010</comment>
                        </textbody>
					</fields>
				</widget>
            </groups>
        </affiliateplus>
    </sections>
</config>