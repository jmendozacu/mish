$otherList = array();
$list = array();

$i=0;
if(Mage::getStoreConfig('mageworx_deliveryzone/deliveryzone/shipto')):
?>
<div class="title"><b>Ship to: </b>
    <span><?php foreach($this->getRestrictedList() as $item): ?>
            <?php if($i<3): ?>
            <?php $list[] = trim($item); ?>
            <?php else: ?>
            <?php $otherList[] = trim($item); ?>
            <?php endif; ?>
            <?php $i++; ?>
        <?php endforeach; ?>
         <?php echo join(", ",$list);?></span>
    <?php if(count($otherList)>0): ?>
        <a href="#" id="other-restricted-view" onclick="$('other-restricted-list').show(); $('other-restricted-view').hide(); $('other-restricted-hide').show(); return false;"><?php echo $this->__("View more")?></a>
        <span class="list" id="other-restricted-list" style="display:none;"><?php echo ", ".join(", ",$otherList) ?></span>
        <a href="#" id="other-restricted-hide" style="display:none;" onclick="$('other-restricted-list').hide(); $('other-restricted-hide').hide(); $('other-restricted-view').show(); return false;"><?php echo $this->__("Hide")?></a>
    <?php endif; ?>
</div>
<?php endif; ?>
<?php if(Mage::getStoreConfig('mageworx_deliveryzone/deliveryzone/zone_mode') == 'notice'): ?>
    <span class='red error'><?php echo $this->productNoticeUnavailible() ?></span>
<?php endif; ?>