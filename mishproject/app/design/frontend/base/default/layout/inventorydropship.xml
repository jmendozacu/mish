<layout version="0.1.0">     
    <inventorydropship_supplier_index>
        <label>Supplier Login Form</label>        
        <remove name="right"/>
        <remove name="footer"/>
        <remove name="before_body_end"/>              
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        
        <reference name="header">
            <block type="page/header" name="header">
                <action method="setTemplate"><template>inventorydropship/supplier/header.phtml</template></action>
            </block>
        </reference>
        <reference name="left">
            <block type="inventorydropship/inventorydropship" name="left_dropship" before="-" template="inventorydropship/supplier/left.phtml" />
        </reference>
        <reference name="content">
            <block type="inventorydropship/inventorydropship" name="supplier_manager" template="inventorydropship/supplier/manager.phtml" />
        </reference>
    </inventorydropship_supplier_index>   
     
    <inventorydropship_supplier_login>
        <label>Supplier Login Form</label>        
        <remove name="right"/>
        <remove name="left"/>
        <remove name="footer"/>
        <remove name="before_body_end"/>
        
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="header">
            <block type="page/header" name="header">
                <action method="setTemplate"><template>inventorydropship/supplier/header.phtml</template></action>
            </block>
        </reference>
        <reference name="content">
            <block type="inventorydropship/inventorydropship" name="supplier_form_login" template="inventorydropship/supplier/login.phtml" />
        </reference>
    </inventorydropship_supplier_login>    
    
    <inventorydropship_supplier_forgotpassword>
        <label>Supplier Forgot Password</label>        
        <remove name="right"/>
        <remove name="left"/>
        <remove name="footer"/>
        <remove name="before_body_end"/>
        
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="header">
            <block type="page/header" name="header">
                <action method="setTemplate"><template>inventorydropship/supplier/header.phtml</template></action>
            </block>
        </reference>
        <reference name="content">
            <block type="inventorydropship/inventorydropship" name="supplier_forgot_password" template="inventorydropship/supplier/forgotpassword.phtml" />
        </reference>
    </inventorydropship_supplier_forgotpassword>    
    
    <inventorydropship_supplier_dropship>
        <label>Supplier Login Form</label>        
        <remove name="right"/>
        <remove name="footer"/>
        <remove name="before_body_end"/>              
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        
        <reference name="header">
            <block type="page/header" name="header">
                <action method="setTemplate"><template>inventorydropship/supplier/header.phtml</template></action>
            </block>
        </reference>
        <reference name="left">
            <block type="inventorydropship/inventorydropship" name="left_dropship" before="-" template="inventorydropship/supplier/left.phtml" />
        </reference>
        <reference name="content">
            <block type="inventorydropship/inventorydropship" name="supplier_dropship" template="inventorydropship/supplier/dropship.phtml" />
        </reference>
    </inventorydropship_supplier_dropship>
       
    <inventorydropship_supplier_viewdropship>
        <label>Supplier Login Form</label>        
        <remove name="right"/>
        <remove name="footer"/>
        <remove name="before_body_end"/>              
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/magestore/inventorydropship/style.css</stylesheet>
            </action>
        </reference>
        <reference name="header">
            <block type="page/header" name="header">
                <action method="setTemplate"><template>inventorydropship/supplier/header.phtml</template></action>
            </block>
        </reference>
        <reference name="left">
            <block type="inventorydropship/inventorydropship" name="left_dropship" before="-" template="inventorydropship/supplier/left.phtml" />
        </reference>
        <reference name="content">
            <block type="inventorydropship/inventorydropship" name="supplier_dropship" template="inventorydropship/supplier/viewdropship.phtml" />
        </reference>
    </inventorydropship_supplier_viewdropship>  
    
    <inventorydropship_email_cancel_items>
        <block type="inventorydropship/inventorydropship" name="dropship_cancel_item" template="inventorydropship/supplier/email/cancel.phtml" />
    </inventorydropship_email_cancel_items>   
    
    <inventorydropship_email_confirm_shipped_items>
        <block type="inventorydropship/inventorydropship" name="dropship_confirm_shipped_item" template="inventorydropship/supplier/email/shipped.phtml" />
    </inventorydropship_email_confirm_shipped_items>

    <sales_order_view translate="label">
        <reference name="sales.order.info">
            <action method="addLink" translate="label" module="sales" ifconfig="inventoryplus/dropship/enable">
                <name>dropship</name>
                <path>inventorydropship/order/dropship</path>
                <label>Drop Shipments</label>
            </action>
        </reference>
    </sales_order_view>

    <sales_order_invoice translate="label">
        <reference name="sales.order.info" ifconfig="inventoryplus/dropship/enable">
            <action method="addLink" translate="label" module="sales" ifconfig="inventoryplus/dropship/enable">
                <name>dropship</name>
                <path>inventorydropship/order/dropship</path>
                <label>Drop Shipments</label>
            </action>
        </reference>
    </sales_order_invoice>

    <sales_order_shipment translate="label">
        <reference name="sales.order.info" ifconfig="inventoryplus/dropship/enable">
            <action method="addLink" translate="label" module="sales" ifconfig="inventoryplus/dropship/enable">
                <name>dropship</name>
                <path>inventorydropship/order/dropship</path>
                <label>Drop Shipments</label>
            </action>
        </reference>
    </sales_order_shipment>

    <sales_order_creditmemo translate="label">
        <reference name="sales.order.info" ifconfig="inventoryplus/dropship/enable">
            <action method="addLink" translate="label" module="sales" ifconfig="inventoryplus/dropship/enable">
                <name>dropship</name>
                <path>inventorydropship/order/dropship</path>
                <label>Drop Shipments</label>
            </action>
        </reference>
    </sales_order_creditmemo>

    <inventorydropship_order_dropship translate="label">
        <label>Customer My Account Order Drop Shipments View</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="sales/order_info" as="info" name="sales.order.info">
                <block type="sales/order_info_buttons" as="buttons" name="sales.order.info.buttons"/>
            </block>
            <block type="inventorydropship/order_dropship" name="inventorydropship.order.dropship">
                <block type="inventorydropship/order_dropship_items" name="dropship_items" template="inventorydropship/order/dropship/items.phtml">
                    <action method="addItemRender"><type>default</type><block>inventorydropship/order_item_renderer_default</block><template>inventorydropship/order/dropship/items/renderer/default.phtml</template></action>
                </block>
            </block>
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label" module="sales"><name>view</name><path>sales/order/view</path><label>Order Information</label></action>
            <action method="addLink" translate="label" module="sales"><name>invoice</name><path>sales/order/invoice</path><label>Invoices</label></action>
            <action method="addLink" translate="label" module="sales"><name>shipment</name><path>sales/order/shipment</path><label>Shipments</label></action>
            <action method="addLink" translate="label" module="sales"><name>creditmemo</name><path>sales/order/creditmemo</path><label>Refunds</label></action>
            <action method="addLink" translate="label" module="sales"><name>dropship</name><path></path><label>Drop Shipments</label></action>
        </reference>
        <block type="core/text_list" name="additional.product.info"/>
    </inventorydropship_order_dropship>
</layout>