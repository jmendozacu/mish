                                for (var i = 0; i < len; i++) {
                                    if(options[i].selected) {
                                        value = options[i].value;
                                    }
                                }
                            }
                            if((el.type=="radio" || el.type=="checkbox") && !el.checked) {
                                return ;
                            }
                            
                            var inputEl   = document.createElement("input");
                            inputEl.type  = "hidden";
                            inputEl.name  = name;
                            inputEl.value = value;
                            $('shipping-zip-form').insertBefore(inputEl,$('prID'));
