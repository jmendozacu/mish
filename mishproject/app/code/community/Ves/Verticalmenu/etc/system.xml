<?xml version="1.0"?>
<config>
    <tabs>
        <ves translate="label" module="ves_verticalmenu">
            <label>Venus Extensions</label>
            <sort_order>210</sort_order>
        </ves>
    </tabs>
	<sections>
        <ves_verticalmenu>
            <label>Ves Verticalmenu</label>
            <tab>ves</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				
            	<ves_verticalmenu translate="label">
					
                    <label>General Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<last_update translate="label">
							<label>Current Update Time</label>
							<frontend_type>label</frontend_type>
							<frontend_model>ves_verticalmenu/system_config_form_field_notification</frontend_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</last_update>
						<show translate="label" module="core">
							<label>Enabled</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_verticalmenu/system_config_backend_verticalmenu</backend_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show>
						<title translate="label">
                            <label>Module Title</label>
                            <frontend_type>text</frontend_type> 
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
						<params translate="label" module="core">
							<label>Params</label>
                            <frontend_type>textarea</frontend_type>
                            <backend_model>ves_verticalmenu/system_config_backend_verticalmenu</backend_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</params>
                        <enable_offcanvas translate="label" module="core">
                            <label>Enabled Off Canvas Menu</label>
                            <sort_order>30</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_verticalmenu/system_config_backend_verticalmenu</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_offcanvas>
                        <navigation_tab translate="label" module="core">
                            <label>Navigation Tab Label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>32</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable_offcanvas>1</enable_offcanvas>
                            </depends>
                        </navigation_tab>
                        <enable_click_parent translate="label" module="core">
                            <label>Enabled Clickable Parent Menu Item</label>
                            <sort_order>40</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_verticalmenu/system_config_backend_verticalmenu</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable_offcanvas>1</enable_offcanvas>
                            </depends>
                        </enable_click_parent>
                        <enable_sidebar_logo translate="label" module="core">
                            <label>Enabled Sidebar Logo</label>
                            <comment>Enable/disable site logo on sidebar menu when view on mobile</comment>
                            <sort_order>50</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>ves_verticalmenu/system_config_backend_verticalmenu</backend_model>
                            <show_in_default>1</show_in_default>
