<config>
    <modules>
        <Ves_Optimize>
            <version>0.1.0</version>
        </Ves_Optimize>
    </modules>
    <global>
        <models>
            <ves_optimize>
                <class>Ves_Optimize_Model</class>
                <resourceModel>ves_optimize_resource</resourceModel>
            </ves_optimize>
            <ves_optimize_resource>
                <class>Ves_Optimize_Model_Resource</class>
                <deprecatedNode>ves_optimize_mysql4</deprecatedNode>
            </ves_optimize_resource>
        </models>
        <blocks>
            <ves_optimize>
                <class>Ves_Optimize_Block</class>
            </ves_optimize>
        </blocks>
        <helpers>
            <ves_optimize>
                <class>Ves_Optimize_Helper</class>
            </ves_optimize>
        </helpers>
        <resources>
            <ves_optimize_setup>
                <setup>
                    <module>Ves_Optimize</module>
                </setup>
            </ves_optimize_setup>
        </resources>
        <cache>
            <types>
                <full_page translate="label,description" module="ves_optimize">
                    <label>Ves Page Cache</label>
                    <description>Full page caching.</description>
                    <tags>FPC</tags>
                </full_page>
            </types>
        </cache>
        <ignore_user_agents>
            <cache_crawler>MagentoCrawler</cache_crawler>
        </ignore_user_agents>
        <widget>
            <related_cache_types>
                <full_page/>
            </related_cache_types>
        </widget>
        <events>
            <core_clean_cache>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanExpiredCache</method>
                    </ves_optimize>
                </observers>
            </core_clean_cache>
            <clean_cache_by_tags>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCacheByTags</method>
                    </ves_optimize>
                </observers>
            </clean_cache_by_tags>
            <model_save_commit_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>processEntityAction</method>
                    </ves_optimize>
                </observers>
            </model_save_commit_after>
            <model_delete_commit_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>processEntityAction</method>
                    </ves_optimize>
                </observers>
            </model_delete_commit_after>
            <sales_order_place_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerNewOrder</method>
                    </ves_optimize>
                </observers>
            </sales_order_place_after>
            <catalog_category_save_before>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerCategorySave</method>
                    </ves_optimize>
                </observers>
            </catalog_category_save_before>

            <!-- FULL REINDEX -->
            <cataloginventory_stock_full_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </ves_optimize>
                </observers>
            </cataloginventory_stock_full_reindex>
            <catalog_product_price_full_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_product_price_full_reindex>
            <catalog_product_flat_full_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_product_flat_full_reindex>
            <catalog_category_flat_full_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_category_flat_full_reindex>
            <catalog_category_product_full_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>invalidateCacheAfterFullReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_category_product_full_reindex>

            <!-- PARTIAL PRODUCT REINDEX -->
            <cataloginventory_stock_partial_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </ves_optimize>
                </observers>
            </cataloginventory_stock_partial_reindex>
            <catalog_product_price_partial_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_product_price_partial_reindex>
            <catalog_product_flat_partial_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_product_flat_partial_reindex>
            <catalog_category_product_partial_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>cleanProductsCacheAfterPartialReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_category_product_partial_reindex>

            <!-- PARTIAL CATEGORY REINDEX -->
            <catalog_category_flat_partial_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>cleanCategoriesCacheAfterPartialReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_category_flat_partial_reindex>
            <catalog_category_product_cat_partial_reindex>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer_index</class>
                        <method>cleanCategoriesCacheAfterPartialReindex</method>
                    </ves_optimize>
                </observers>
            </catalog_category_product_cat_partial_reindex>
        </events>
    </global>
    <adminhtml>
        <events>
            <clean_media_cache_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCache</method>
                    </ves_optimize>
                </observers>
            </clean_media_cache_after>
            <clean_catalog_images_cache_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCache</method>
                    </ves_optimize>
                </observers>
            </clean_catalog_images_cache_after>
            <model_save_commit_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>validateDataChanges</method>
                    </ves_optimize>
                </observers>
            </model_save_commit_after>
            <model_delete_commit_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>validateDataDelete</method>
                    </ves_optimize>
                </observers>
            </model_delete_commit_after>
            <tag_save_before>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCachedProductTagsForTags</method>
                    </ves_optimize>
                </observers>
            </tag_save_before>
            <tag_save_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCachedProductTagsForTags</method>
                    </ves_optimize>
                </observers>
            </tag_save_after>
            <tag_delete_before>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCachedProductTagsForTags</method>
                    </ves_optimize>
                </observers>
            </tag_delete_before>
            <controller_action_postdispatch_adminhtml_system_currency_saveRates>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>invalidateCache</method>
                    </ves_optimize>
                </observers>
            </controller_action_postdispatch_adminhtml_system_currency_saveRates>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>invalidateCache</method>
                    </ves_optimize>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <controller_action_postdispatch_adminhtml_system_currencysymbol_save>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>invalidateCache</method>
                    </ves_optimize>
                </observers>
            </controller_action_postdispatch_adminhtml_system_currencysymbol_save>
            <catalogrule_after_apply>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCache</method>
                    </ves_optimize>
                </observers>
            </catalogrule_after_apply>
            <core_config_backend_design_exception_save_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerDesignExceptionsChange</method>
                    </ves_optimize>
                </observers>
            </core_config_backend_design_exception_save_after>
            <adminhtml_system_config_backend_cookie_save_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>invalidateCache</method>
                    </ves_optimize>
                </observers>
            </adminhtml_system_config_backend_cookie_save_after>
            <adminhtml_cache_refresh_type>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCache</method>
                    </ves_optimize>
                </observers>
            </adminhtml_cache_refresh_type>
            <adminhtml_cache_flush_system>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCache</method>
                    </ves_optimize>
                </observers>
            </adminhtml_cache_flush_system>
            <adminhtml_cache_flush_all>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cleanCache</method>
                    </ves_optimize>
                </observers>
            </adminhtml_cache_flush_all>
            <wishlist_item_add_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerAdminWishlistChange</method>
                    </ves_optimize>
                </observers>
            </wishlist_item_add_after>
        </events>
        <cache>
            <dependency>
                <change>
                    <widget>Mage_Widget_Model_Widget_Instance</widget>
                </change>
                <delete>
                    <widget>Mage_Widget_Model_Widget_Instance</widget>
                </delete>
            </dependency>
        </cache>
    </adminhtml>
    <frontend>
        <routers>
            <ves_optimize>
                <use>standard</use>
                <args>
                    <module>Ves_Optimize</module>
                    <frontName>optimize</frontName>
                </args>
            </ves_optimize>
        </routers>
        <events>
            <controller_response_redirect>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>checkMessages</method>
                    </ves_optimize>
                </observers>
            </controller_response_redirect>
            <controller_action_predispatch>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>processPreDispatch</method>
                    </ves_optimize>
                    <ves_optimize_form_key>
                        <class>ves_optimize/observer</class>
                        <method>registerCachedFormKey</method>
                    </ves_optimize_form_key>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch_catalog_product_view>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>checkProductState</method>
                    </ves_optimize>
                </observers>
            </controller_action_postdispatch_catalog_product_view>
            <controller_action_postdispatch_catalog_category_view>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>checkCategoryState</method>
                    </ves_optimize>
                </observers>
            </controller_action_postdispatch_catalog_category_view>
            <controller_front_send_response_before>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>cacheResponse</method>
                    </ves_optimize>
                </observers>
            </controller_front_send_response_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <ves_optimize_register_block_tags>
                        <class>ves_optimize/observer</class>
                        <method>registerBlockTags</method>
                    </ves_optimize_register_block_tags>
                </observers>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>renderBlockPlaceholder</method>
                    </ves_optimize>
                </observers>
            </core_block_abstract_to_html_after>
            <customer_login>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>customerLogin</method>
                    </ves_optimize>
                    <ves_optimize_compare_list_change>
                        <class>ves_optimize/observer</class>
                        <method>registerCompareListChange</method>
                    </ves_optimize_compare_list_change>
                </observers>
            </customer_login>
            <controller_action_postdispatch_customer_account_logoutSuccess>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>customerLogout</method>
                    </ves_optimize>
                </observers>
            </controller_action_postdispatch_customer_account_logoutSuccess>
            <sales_quote_save_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerQuoteChange</method>
                    </ves_optimize>
                </observers>
            </sales_quote_save_after>
            <sales_quote_remove_item>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerQuoteChange</method>
                    </ves_optimize>
                </observers>
            </sales_quote_remove_item>
            <catalog_product_compare_add_product>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerCompareListChange</method>
                    </ves_optimize>
                </observers>
            </catalog_product_compare_add_product>
            <catalog_product_compare_remove_product>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerCompareListChange</method>
                    </ves_optimize>
                </observers>
            </catalog_product_compare_remove_product>
            <catalog_product_compare_item_collection_clear>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerCompareListChange</method>
                    </ves_optimize>
                </observers>
            </catalog_product_compare_item_collection_clear>
            <core_session_abstract_add_message>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>processNewMessage</method>
                    </ves_optimize>
                </observers>
            </core_session_abstract_add_message>
            <core_session_abstract_clear_messages>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>processMessageClearing</method>
                    </ves_optimize>
                </observers>
            </core_session_abstract_clear_messages>
            <wishlist_add_product>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerWishlistChange</method>
                    </ves_optimize>
                </observers>
            </wishlist_add_product>
            <wishlist_item_delete_commit_after>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerWishlistChange</method>
                    </ves_optimize>
                </observers>
            </wishlist_item_delete_commit_after>
            <poll_vote_add>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>registerPollChange</method>
                    </ves_optimize>
                </observers>
            </poll_vote_add>
            <catalog_controller_product_init_before>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>updateProductInfo</method>
                    </ves_optimize>
                </observers>
            </catalog_controller_product_init_before>
            <ves_customersegment_ids_changed>
                <observers>
                    <ves_optimize>
                        <class>ves_optimize/observer</class>
                        <method>changedCustomerSegmentIds</method>
                    </ves_optimize>
                </observers>
            </ves_customersegment_ids_changed>
        </events>
        <cache>
            <requests>
                <_no_route>ves_optimize/processor_noroute</_no_route>
                <cms>ves_optimize/processor_default</cms>
                <catalog>
                    <category>
                        <view>ves_optimize/processor_category</view>
                    </category>
                </catalog>
                <catalog>
                    <product>
                        <view>ves_optimize/processor_product</view>
                    </product>
                </catalog>
            </requests>
        </cache>
    </frontend>
    <default>
        <system>
            <page_cache>
                <allowed_depth>1</allowed_depth>
                <multicurrency>1</multicurrency>
                <max_cache_size>1024</max_cache_size>
            </page_cache>
            <page_crawl>
                <enable>0</enable>
                <threads>1</threads>
                <multicurrency>1</multicurrency>
            </page_crawl>
        </system>

        <dev>
            <translate_inline>
                <invalid_caches>
                    <full_page/>
                </invalid_caches>
            </translate_inline>
        </dev>
    </default>
    <crontab>
        <jobs>
            <ves_page_cache_crawler>
                <schedule>
                    <cron_expr>0 3 * * *</cron_expr>
                </schedule>
                <run>
                    <model>ves_optimize/crawler::crawl</model>
                </run>
            </ves_page_cache_crawler>
        </jobs>
    </crontab>
</config>
