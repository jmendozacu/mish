<?xml version="1.0"?>
<config>
	<tabs>
        <ves translate="label">
            <label>VES</label>
            <sort_order>20</sort_order>
        </ves>
    </tabs>
    <sections>
        <bannermanager translate="label" module="bannermanager">
            <label>Banner Manager</label>
            <tab>ves</tab>
            <frontend_type>text</frontend_type>
            <sort_order>110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>                
                <config>
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>						
						<enabled>
                            <label>Enable Banner Manager</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <cache_time>
                        	<label>Cache Lifetime (seconds)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>24 hours by default</comment>
                        </cache_time>
                    </fields>
                </config>
                <author_information translate="label">
                    <label>Author</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[
                    The <strong>Banner Manager</strong> is developed and supported by <a href="http://www.vnecoms.com/" target="_blank">www.Vnecoms.com</a>.<br />
					If you need any support or have any question please contact us at <a href="mailto:support@vnecoms.com">support@vnecoms.com</a><br /><br />
					Best Regards,<br />
					<strong>Vnecoms</strong>
					]]></comment>
                </author_information>
            </groups>
            
        </bannermanager>
    </sections>
</config>
