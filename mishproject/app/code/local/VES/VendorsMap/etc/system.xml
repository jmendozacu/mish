<?xml version="1.0"?>
<config>
    <sections>
     	<vendors translate="label" module="vendorsmap">
     		<groups>
     			<vendors_map translate="label" module="vendorsmap">
                    <label>Vendor Map</label>
                    <frontend_type>select</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <api_code>
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_code>
                        <location_lat translate="label" module="vendorsmap">
                        	<label>Default Location Lat</label>
							<frontend_type>text</frontend_type>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_class>required-entry</frontend_class>
                        </location_lat>
                        <location_lng translate="label" module="vendorsmap">
                        	<label>Default Location Lng</label>
							<frontend_type>text</frontend_type>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_class>required-entry</frontend_class>
                        </location_lng>
                        <heading translate="label" module="vendorsmap">
                            <label>Header</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </heading>
                         <sub_heading translate="label" module="vendorsmap">
                            <label>Sub Header</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sub_heading>
                        <store_attribute_1 translate="label" module="vendorsmap">
                            <label>Store attribute 1</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_attribute_1>
                        <store_attribute_2 translate="label" module="vendorsmap">
                            <label>Store attribute 2</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_attribute_2>
                    </fields>
                </vendors_map>
     		</groups>
     	</vendors>
    </sections>
</config>