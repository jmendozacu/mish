                        <base_template_admin translate="label tooltip">
                            <label>Base template for admin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>vendorsrma/system_config_source_template_admin</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </base_template_admin>

                        <base_template_vendor translate="label tooltip">
                            <label>Base template for vendor</label>
                            <frontend_type>select</frontend_type>
                            <source_model>vendorsrma/system_config_source_template_vendor</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </base_template_vendor>

