                        <base_template_customer translate="label tooltip">
                            <label>Base template for customer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>vendorsrma/system_config_source_template_customer</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
