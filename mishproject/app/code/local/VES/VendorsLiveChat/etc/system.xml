<?xml version="1.0"?>
<config>
    <sections>
        <vendors translate="label" module="vendorslivechat">
            <groups>
                <vendorslivechat translate="label" module="vendorslivechat">
                    <label>Vendor Live Chat</label>
                    <frontend_type>select</frontend_type>
                    <sort_order>110</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <theme_color translate="label">
                            <label>Theme Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_class>required-entry</frontend_class>
                            <comment>Click textbox to choose color</comment>
                        </theme_color>
                        <text_color translate="label">
                            <label>Header Text Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_class>required-entry</frontend_class>
                            <comment>Click textbox to choose color</comment>
                        </text_color>
                        <show_button_product_page translate="label tooltip">
                            <label>Show Live Chat Button In Product View Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_button_product_page>
                    </fields>
                </vendorslivechat>
            </groups>
        </vendors>
    </sections>
</config>