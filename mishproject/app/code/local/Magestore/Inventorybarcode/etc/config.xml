<config>
    <modules>
        <Magestore_Inventorybarcode>
            <version>0.1.1</version>
        </Magestore_Inventorybarcode>
    </modules>
    <frontend>
        <routers>
            <inventorybarcode>
                <use>standard</use>
                <args>
                    <module>Magestore_Inventorybarcode</module>
                    <frontName>inventorybarcode</frontName>
                </args>
            </inventorybarcode>
        </routers>
        <layout>
            <updates>
                <inventorybarcode>
                    <file>inventorybarcode.xml</file>
                </inventorybarcode>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorybarcode>
                    <files>
                        <default>Magestore_Inventorybarcode.csv</default>
                    </files>
                </Magestore_Inventorybarcode>
            </modules>
        </translate>
    </frontend>
    <admin> 
        <routers> 
            <adminhtml> 
                <args> 
                    <modules> 
                        <magestore_inventorybarcode after="Mage_Adminhtml">Magestore_Inventorybarcode_Adminhtml</magestore_inventorybarcode> 
                    </modules> 
                </args> 
            </adminhtml> 
        </routers> 
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <inventorybarcode>
                    <file>inventorybarcode.xml</file>
                </inventorybarcode>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorybarcode>
                    <files>
                        <default>Magestore_Inventorybarcode.csv</default>
                    </files>
                </Magestore_Inventorybarcode>
            </modules>
        </translate>
        <events>
            <inventory_menu_list>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>inventorybarcodeMenu</method>
                    </inventorybarcode_observers>
                </observers>
            </inventory_menu_list>
            <!--<inventorybarcode_barcodeattribute_save_after>-->
                <!--<observers>-->
                    <!--<inventorybarcode_observers>-->
                        <!--<class>inventorybarcode/observer</class>-->
                        <!--<method>addBarcodeColumn</method>-->
                    <!--</inventorybarcode_observers>-->
                <!--</observers>-->
            <!--</inventorybarcode_barcodeattribute_save_after>-->
            <save_delivery_after>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>purchaseorderDeliverySaveAfter</method>
                    </inventorybarcode_observers>
                </observers>
            </save_delivery_after>
            <save_delivery_before>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>saveDeliveryBefore</method>
                    </inventorybarcode_observers>
                </observers>
            </save_delivery_before>
            <save_all_delivery_after>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>saveAllDeliveryAfter</method>
                    </inventorybarcode_observers>
                </observers>
            </save_all_delivery_after>
            <delivery_product_grid_after>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>deliveryProductGridAfter</method>
                    </inventorybarcode_observers>
                </observers>
            </delivery_product_grid_after>
            
            <sales_order_shipment_save_after>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>shipmentAfterSave</method>
                    </inventorybarcode_observers>
                </observers>
            </sales_order_shipment_save_after>
            
            <sales_order_creditmemo_save_after>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>orderCreditmemoSaveAfter</method>
                    </inventorybarcode_observers>
                </observers>
            </sales_order_creditmemo_save_after>


            <!-- Michael 201602 -->
            <admin_system_config_changed_section_inventoryplus>
                <observers>
                    <inventorybarcode_observers>
                        <type>singleton</type>
                        <class>inventorybarcode/observer</class>
                        <method>changeBarcodeType</method>
                    </inventorybarcode_observers>
                </observers>
            </admin_system_config_changed_section_inventoryplus>

            <controller_action_predispatch_adminhtml_system_config_save>
                <observers>
                    <inventorybarcode_observers>
                        <type>singleton</type>
                        <class>inventorybarcode/observer</class>
                        <method>saveConfigBefore</method>
                    </inventorybarcode_observers>
                </observers>
            </controller_action_predispatch_adminhtml_system_config_save>

            <!-- show barcode in delivery after created -->
            <deliveried_product_grid_after_created>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>deliveriedProductGridAfterCreated</method>
                    </inventorybarcode_observers>
                </observers>
            </deliveried_product_grid_after_created>

            <add_more_button_delivery>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>addMoreButtonDelivery</method>
                    </inventorybarcode_observers>
                </observers>
            </add_more_button_delivery>
            <add_more_button_delivery_position>
                <observers>
                    <inventorybarcode_observers>
                        <class>inventorybarcode/observer</class>
                        <method>addMoreButtonDeliveryPosition</method>
                    </inventorybarcode_observers>
                </observers>
            </add_more_button_delivery_position>
        </events>       
    </adminhtml>   
    <global>
        <models>
            <inventorybarcode>
                <class>Magestore_Inventorybarcode_Model</class>
                <resourceModel>inventorybarcode_mysql4</resourceModel>
            </inventorybarcode>
            <inventorybarcode_mysql4>
                <class>Magestore_Inventorybarcode_Model_Mysql4</class>
                <entities>
                    <barcode>
                        <table>erp_inventory_barcode</table>
                    </barcode>
                    <barcode_shipment>
                        <table>erp_inventory_barcode_shipment</table>
                    </barcode_shipment>
                    <barcode_actionlog>
                        <table>erp_inventory_barcode_action_log</table>
                    </barcode_actionlog>                   
                    <barcodeattribute>
                        <table>erp_inventory_barcode_attribute</table>
                    </barcodeattribute>
                    <barcodeattribute_type>
                        <table>erp_inventory_barcode_attribute_type</table>
                    </barcodeattribute_type>
                    <barcodetemplate>
                        <table>erp_inventory_barcode_template</table>
                    </barcodetemplate>
                    <barcode_scanitem>
                        <table>erp_inventory_barcode_scan_item</table>
                    </barcode_scanitem>                    
                </entities>
            </inventorybarcode_mysql4>
        </models>
        <resources>
            <inventorybarcode_setup>
                <setup>
                    <module>Magestore_Inventorybarcode</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventorybarcode_setup>
            <inventorybarcode_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventorybarcode_write>
            <inventorybarcode_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventorybarcode_read>
        </resources>
        <blocks>
            <inventorybarcode>
                <class>Magestore_Inventorybarcode_Block</class>
            </inventorybarcode>
            <!--Added by Dante - 2016/01/27-->
            <!--Fix bug mass action in grid inside product's tab-->
            <!--More info: http://magento.stackexchange.com/questions/3867/mass-action-in-widgets-->
            <adminhtml>
                <rewrite>
                    <widget_grid_massaction>Magestore_Inventorybarcode_Block_Adminhtml_Widget_Grid_Massaction</widget_grid_massaction>
                </rewrite>
            </adminhtml>
            <!--End-->
        </blocks>
        <helpers>
            <inventorybarcode>
                <class>Magestore_Inventorybarcode_Helper</class>
            </inventorybarcode>
        </helpers>       
    </global>
    <default>
        <inventoryplus>
            <barcode>
                <use_multiple_barcode>0</use_multiple_barcode>
                <barcode_type>BCGi25</barcode_type>
                <pattern>BAR[A.4][AN.6]</pattern>
                <createbarcode_afterdelivery>1</createbarcode_afterdelivery>
                <barcode_attribute>sku</barcode_attribute>
                <update_barcode>1</update_barcode>
            </barcode>
        </inventoryplus>
    </default>
</config>