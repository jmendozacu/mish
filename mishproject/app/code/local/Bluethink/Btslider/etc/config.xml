<?xml version="1.0"?>
<config>
    <modules>
        <Bluethink_Btslider>
            <version>0.1.0</version>
        </Bluethink_Btslider>
    </modules>
    <frontend>
        <routers>
            <btslider>
                <use>standard</use>
                <args>
                    <module>Bluethink_Btslider</module>
                    <frontName>btslider</frontName>
                </args>
            </btslider>
        </routers>
        <layout>
            <updates>
                <btslider>
                    <file>btslider.xml</file>
                </btslider>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<btslider>
				<use>admin</use>
				<args>
					<module>Bluethink_Btslider</module>
					<frontName>btslider</frontName>
				</args>
			</btslider>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<btslider module="btslider">
				<title>Btslider</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="btslider">
						<title>Manage Banner</title>
						<sort_order>0</sort_order>
						<action>btslider/adminhtml_btslider</action>
					</items>
				</children>
			</btslider>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Bluethink_Btslider>
							<title>Btslider Module</title>
							<sort_order>10</sort_order>
						</Bluethink_Btslider>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<btslider>
					<file>btslider.xml</file>
				</btslider>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <btslider>
                <class>Bluethink_Btslider_Model</class>
                <resourceModel>btslider_mysql4</resourceModel>
            </btslider>
            <btslider_mysql4>
                <class>Bluethink_Btslider_Model_Mysql4</class>
                <entities>
                    <btslider>
                        <table>btslider</table>
                    </btslider>
                </entities>
            </btslider_mysql4>
        </models>
        <resources>
            <btslider_setup>
                <setup>
                    <module>Bluethink_Btslider</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </btslider_setup>
            <btslider_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </btslider_write>
            <btslider_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </btslider_read>
        </resources>
        <blocks>
            <btslider>
                <class>Bluethink_Btslider_Block</class>
            </btslider>
        </blocks>
        <helpers>
            <btslider>
                <class>Bluethink_Btslider_Helper</class>
            </btslider>
        </helpers>
    </global>
</config>