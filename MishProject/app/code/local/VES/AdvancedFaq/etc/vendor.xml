<?xml version="1.0"?>
<config>
    <sections>
        <advancedfaq translate="label" module="advancedfaq">
            <label>Advanced Faq</label>
            <sort_order>50</sort_order>
            <groups>                
                <advancedfaq translate="label">
                    <label>Advanced Faq</label>
                    <sort_order>40</sort_order>
                    <fields>
                       <title>
							<label>Page Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_class>required-entry</frontend_class>
						</title>
						<meta_keyword>
							<label>META Keywords</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_class>required-entry</frontend_class>
						</meta_keyword>
						<meta_description>
							<label>META Description</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_class>required-entry</frontend_class>
						</meta_description>
                    </fields>
                </advancedfaq>
                <theme translate="label">
	                    <label>Theme Advanced Faq Setting</label>
	                    <frontend_type>text</frontend_type>
	                    <sort_order>50</sort_order>
	                	<fields>
	                	  <enable_accordion>
	                            <label>Enable Accordion</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>advancedfaq/system_config_source_yesno</source_model>
	                            <sort_order>2</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                      </enable_accordion>
	                       <speed>
	                            <label>Speed</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>advancedfaq/system_config_source_speed</source_model>
	                            <sort_order>3</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                       </speed>
	                        <bind>
	                            <label>Bind</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>advancedfaq/system_config_source_bind</source_model>
	                            <sort_order>3</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                       </bind>
                      </fields>
                </theme>
            </groups>
        </advancedfaq>
    </sections>
</config>
