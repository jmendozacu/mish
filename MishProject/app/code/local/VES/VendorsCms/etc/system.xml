<?xml version="1.0"?>
<config>
    <sections>
        <vendors>
            <tab>ves</tab>
            <groups>                
                <vendor_page translate="label">
                    <label>Vendor Page</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <global_theme translate="label comment">
                        	<label>Available Themes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>vendorscms/source_design</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <tooltip>These selected theme will be available for all vendors</tooltip>
                        </global_theme>
                    </fields>
                </vendor_page>
            </groups>
        </vendors>
    </sections>
</config>
