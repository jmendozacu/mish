<config>
    <modules>
        <Amasty_ShippingPerItem>
            <version>1.0.3</version>
        </Amasty_ShippingPerItem>
    </modules>

    <global>
        <models>
            <amperitem>
                <class>Amasty_ShippingPerItem_Model</class>
            </amperitem>
        </models>
        
		<resources>
             <amperitem_setup>
                <setup>
                    <module>Amasty_ShippingPerItem</module>
                    <class>Amasty_ShippingPerItem_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </amperitem_setup>
		    <amperitem_write>
		        <connection><use>core_write</use></connection>
		    </amperitem_write>
		    <amperitem_read>
		        <connection><use>core_read</use></connection>
		    </amperitem_read>
		</resources>
        
    </global>

    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <carriers>
                                            <children>
                                                <amperitem>
                                                    <title>Percent Shipping</title>
                                                </amperitem>
                                            </children>
                                        </carriers>
                                    </children>
                                </config>
                            </children>
                        </system> 
                     </children>
                </admin> 
			</resources>
		</acl>
    </adminhtml> 
    
    <default>
        <carriers>
            <amperitem>
                <active>0</active>
                <title>Shipping Per Item</title>
                <name>Items</name>
                <default_rate>0</default_rate>
                <use_default_rate>0</use_default_rate>
                <base_rate>0</base_rate>
                <calc_separately>0</calc_separately>
                <use_max>0</use_max>
                <min>0</min>
                <max>0</max>
                <individual_rate_only>0</individual_rate_only>
                <sort_order>100</sort_order>
                <sallowspecific>0</sallowspecific>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <model>amperitem/carrier_shippingperitem</model>
            </amperitem>
        </carriers>
    </default>
    
</config>