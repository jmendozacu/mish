<?xml version="1.0"?>
<config>
	  <tabs>
		<evnc_tab translate="label" module="whatsapp">
            <label>Evince Extension</label>
            <sort_order>3</sort_order>
        </evnc_tab>
	  </tabs>
	  <sections>
		<evince_dev_section  translate="label" module="whatsapp">                    
		<label>WhatsApp Products Share</label>
		<tab>evnc_tab</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <evince_dev_group translate="label"> 
					  <label>WhatsApp Products Share Settings</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <evince_dev_enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </evince_dev_enable>
                        <evince_dev_custom_share_message translate="label">
                            <label>Set Your Custom Share Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>e.g "Hey! Take a look at this awesome product:" (default message will be display)</comment>
                        </evince_dev_custom_share_message>
                          <evince_dev_button translate="label">
                            <label>Select Button Size</label>
                            <frontend_type>select</frontend_type>
                            <source_model>whatsapp/whatsapp</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </evince_dev_button>
                          <evince_dev_button_pos translate="label">
                            <label>Select Button Position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>whatsapp/whatsappposition</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
		                   </evince_dev_button_pos>
							<evnc_background translate="label tooltip comment">
								<label>Footer Background Color</label>
								<frontend_type>text</frontend_type>
								<validate>color</validate>
								<sort_order>5</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment>e.g "000000" (It will be display when you select position "Footer Section")</comment>
							</evnc_background>
					   </fields>
					   </evince_dev_group>
					</groups>
		</evince_dev_section>
	  </sections>
</config>
